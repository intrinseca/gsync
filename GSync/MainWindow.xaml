<Window x:Class="GSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox Name="lstItems" Margin="3" />

        <StackPanel Grid.Row="1" >
            <Button Name="btnCredentials" Margin="3" Click="btnCredentials_Click">Update Google Details</Button>
            <Button Name="btnRefreshOutlook" Click="btnRefreshOutlook_Click" Margin="3">Refresh Outlook</Button>
        </StackPanel>
    </Grid>
</Window>
