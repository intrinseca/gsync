<Window x:Class="GSync.CredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Google Details" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" SizeToContent="Height">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="2">Enter your Google username and password</Label>
        
        <Label Grid.Row="1" Grid.Column="0" Margin="3">Username</Label>
        <TextBox Name="txtUsername" Grid.Row="1" Grid.Column="1" Margin="3" />

        <Label Grid.Row="2" Grid.Column="0" Margin="3">Password</Label>
        <PasswordBox Name="txtPassword" Grid.Row="2" Grid.Column="1" Margin="3" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" Grid.ColumnSpan="2">
            <Button Name="btnSave" Margin="3" Width="80" Click="btnSave_Click" IsDefault="True">Save</Button>
            <Button Name="btnCancel" Margin="3" Width="80" IsCancel="True" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
